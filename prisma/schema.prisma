datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Playlist {
  id        String   @id
  name      String
  urls      Url[]  @relation("PlaylistToUrls") 
  userId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Url{
  id        String   @id
  url       String
  playlist  Playlist @relation("PlaylistToUrls", fields: [id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
}



generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Playlist {
  id        String   @id 
  name      String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  videos    Video[]  @relation("PlaylistToVideos")
}

model Video {
  id         String   @id @default(uuid())
  title      String
  duration   String
  channel    String
  thumbnail  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  youtubeUrl String   
  playlist   Playlist @relation("PlaylistToVideos", fields: [playlistId], references: [id])
  playlistId String
  url        Url?     @relation("VideoToUrl")


  @@index([playlistId])
}

model Url {
  id         String   @id @default(uuid())
  url        String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  youtubeUrl String   @unique
  video      Video?   @relation("VideoToUrl", fields: [id], references: [id])

  @@index([id])
}
